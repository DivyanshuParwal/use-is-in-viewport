{
  "scripts": {
    "build": "npm run lint && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p ./tsconfig.es5.cjs.json",
    "build:esm": "tsc -p ./tsconfig.es9.esm.json",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "lint": "tslint -p ./tsconfig.json",
    "test": "jest",
    "prettier": "prettier --config ./.prettierrc --write \"{src,test,bin,lib,config}/**/*.{ts,json,css,html,md}\""
  },
  "devDependencies": {
    "@types/react": "^16.8.13",
    "cypress": "^3.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "observe-element-in-viewport": "0.0.10"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.{json,md,html,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "name": "@zeusdeux/use-intersection-observer",
  "description": "A react hook to use the IntersectionObserver declaratively in your React app.",
  "version": "0.0.7",
  "main": "built/es5-cjs/src/index.js",
  "types": "built/es5-cjs/src/index.d.ts",
  "module": "built/es9-esm/src/index.js",
  "es": "built/es9-esm/src/index.js",
  "main-es": "built/es9-esm/src/index.js",
  "keywords": [
    "react",
    "hook",
    "intersection observer"
  ],
  "author": "Mudit Ameta <zeusdeux@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeusdeux/use-intersection-observer.git"
  },
  "bugs": {
